<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="black">#FF000000</color>
    <color name="gray">#5A5A5A</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <dimen name="button_text_size">48sp</dimen>
    <dimen name="button_v_margin">12dp</dimen>
    <dimen name="default_padding">8dp</dimen>
    <dimen name="text_view_result_text_size">60sp</dimen>
    <dimen name="text_view_ultima_expressao_text_size">40sp</dimen>
    <string name="app_name">Calculadora SI</string>
    <string name="text_view_result_height">60dp</string>
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/gray</item>
    </style>
    <style name="AppTheme.Equal.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
    </style>
    <style name="AppTheme.Other.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>
    <style name="ButtonOperacaoTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
    </style>
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/AppButton</item>
    </style>
</resources>